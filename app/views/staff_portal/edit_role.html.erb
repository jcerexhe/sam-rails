<%= @user.email %>
<%= simple_form_for(@user, url: url_for(action: :update_role, controller: :staff_portal, id: @user.id), html: {method: :put}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
